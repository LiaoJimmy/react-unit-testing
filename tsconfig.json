{
  "compilerOptions": {
    "target": "ES5",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": ["node", "jest", "@testing-library/jest-dom"],
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "jest.config.js",
    "jest.setup.js"
 ],
  "exclude": [
    "./node_modules",
    "./build",
    "./dist",
    "./.vscode"
  ],
}